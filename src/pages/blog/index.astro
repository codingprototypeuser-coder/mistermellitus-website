---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead
      title={`Blog | ${SITE_TITLE}`}
      description="Alle Blogbeiträge von Mister Mellitus – Erfahrungen, Tipps und Wissen rund um Diabetes"
    />
  </head>
  <body>
    <Header />

    <main class="py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12">
          <h1 class="text-3xl md:text-4xl font-bold mb-4">Blog</h1>
          <p class="text-lg text-[var(--text-secondary)]">
            Erfahrungen, Tipps und Wissen rund um Diabetes – von einem, der weiß, wovon er spricht.
          </p>
          <div class="w-20 h-1 bg-[var(--primary)] rounded mt-6"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="card group">
              {post.data.heroImage && (
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <time class="text-sm text-[var(--text-muted)]">
                  <FormattedDate date={post.data.pubDate} />
                </time>
                <h2 class="text-lg font-semibold mt-2 mb-3 group-hover:text-[var(--primary)] transition-colors">
                  <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </h2>
                <p class="text-[var(--text-secondary)] text-sm line-clamp-3">
                  {post.data.description}
                </p>
                <a
                  href={`/blog/${post.id}`}
                  class="inline-flex items-center gap-1 text-[var(--primary)] text-sm font-medium mt-4 hover:text-[var(--primary-dark)]"
                >
                  Weiterlesen
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        {posts.length === 0 && (
          <div class="text-center py-16">
            <p class="text-[var(--text-muted)]">Noch keine Beiträge vorhanden.</p>
          </div>
        )}
      </div>
    </main>

    <Footer />
  </body>
</html>
